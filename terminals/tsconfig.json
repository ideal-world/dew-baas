{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@idealworld/*": [
        "packages/*/src"
      ]
    },
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "target": "ESNext",
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "packages/*/src"
  ]
}
